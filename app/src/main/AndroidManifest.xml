<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="navigationdrawer.sunnyapps.com.tatva">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".postActivity" />
        <activity android:name=".addpostActivity" />
        <activity android:name=".EventsActivity" />
        <activity android:name=".Registeractivity" />
        <activity android:name=".books" />
        <activity android:name=".addbooksact">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="navigationdrawer.sunnyapps.com.tatva.books" />
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".deletebook" />
        <activity android:name=".Credits" />
        <activity android:name=".About" />
        <activity android:name=".Todelete" />
        <activity android:name=".webview"></activity>
    </application>

</manifest>